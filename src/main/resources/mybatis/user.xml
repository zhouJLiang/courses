<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.q.courses.dao.UserDAO">


    <resultMap id="BaseResultMap" type="com.q.courses.entity.User">
        <id column="id" property="id" jdbcType="INTERGER"/>
        <id column="username" property="username" jdbcType="VARCHAR"/>
        <id column="password" property="password" jdbcType="VARCHAR"/>
        <id column="datetime" property="datetime" jdbcType="datetime"/>
    </resultMap>
    <sql id="Base_column_list">
        id,username,password
    </sql>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select <include refid="Base_column_list"></include>
        from
        t_user
        where id =#{id,jdbcType=INTEGER}
    </select>
    <select id="selectAll" resultType="com.q.courses.entity.User">
        select  * from t_user
    </select>
    
    <insert id="insertUser" parameterType="com.q.courses.entity.User">
        insert into t_user(id,username,password,datetime) values (#{id,},#{username},#{password},#{datetime})
    </insert>
    <delete id="deleteUser" parameterType="java.lang.Integer">
        delete from t_user where id = #{id}
    </delete>
    <update id="updateByPrimaryKey" parameterType="com.q.courses.entity.User">
        update  t_user set username =#{username}, password =#{password},datetime =#{datetime}
    </update>
</mapper>